{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "jsxFactory": "renderer.create",
    "typeRoots": [
      "../../node_modules/@types",
      "../../src/typings"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "../../src/**/*"
  ]
}
